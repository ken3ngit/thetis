
<%= form_tag( {:controller => 'items', :action => 'update_image_info' }, :id => 'form_image_info', :name => 'form_image_info', :method => 'post', :enctype => 'multipart/form-data') %>
<table style="width:100%;">
  <tr>
    <td style="text-align:right;">
      <table style="width:100%; margin-top:5px; border-spacing:1px;">
        <tr>
          <td colspan="2" style="text-align:center;">
            <img src="<%= url_for(:controller => 'items', :action => 'get_image', :id => @image.id, :ts => ApplicationHelper.get_timestamp(@image)) %>" style="width:90px; height:60px;" />
          </td>
        </tr>
        <tr style="height:5px;"><td></td></tr>
        <tr>
          <td class="item_cap_td" style="background-color:pink"><%= t('item.new_file') %></td>
          <td class="item_value_td">
            <%= file_field(:image, :file, :size => '43', :style => 'width:100%') %><br/>
          </td>
        </tr>
        <tr>
          <td class="item_cap_td" style="background-color:pink"><%= Item.human_attribute_name('title') %></td>
          <td class="item_value_td">
            <%= text_field(:image, :title, :style => 'width:70%') %><br/>
          </td>
        </tr>
        <tr>
          <td class="item_cap_td" style="background-color:pink"><%= Image.human_attribute_name('memo') %></td>
          <td class="item_value_td">
            <%= text_area(:image, :memo, :rows => '3', :wrap => 'off', :style => 'width:100%') %><br/>
          </td>
        </tr>
        <tr style="height:10px;"><td></td></tr>
        <tr>
          <td colspan="2">
            <table style="width:100%;">
              <tr>
                <td style="text-align:center;">
                  <input id="image_info_ok" type="button" value="<%= t('btn.register') %>" onclick="onImageInfoOk();" style="width:80px;">
                  &nbsp;&nbsp;<input id="image_info_cancel" type="button" value="<%= t('btn.cancel') %>" onclick="onImageInfoCancel()" style="width:80px;">
                </td>
              </tr>
            </table>
          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>

<input type="hidden" name="image_id" value="<%= @image.id %>" />

</form>

